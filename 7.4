// 2. Задайте переменную dayOfWeek (номер дня недели - число от 1 до 7). 
//   Выведите в консоль название этого дня недели.

let dayOfWeek = 8;
switch (dayOfWeek) {
  case 1: 
    console.log('Monday');
    break;
  case 2:
    console.log('Tuesday');
    break;
  case 3:
    console.log('Wednesday');
    break;
  case 4:
    console.log('Thursday');
    break;
  case 5:
    console.log('Friday');
    break;
  case 6:
    console.log('Saturday');
    break;
  case 7:
    console.log('Sunday');
    break;
  default:
    console.log('Wrong day. Try again');
}

