//  "Even" для четных чисел  или  "Odd" для нечетных чисел.
function evenOdd (n){
  if (n % 2 == 0) return 'Even';
  else return 'Odd';
}
console.log(evenOdd(15));
console.log(evenOdd(44));
console.log(evenOdd(0));

